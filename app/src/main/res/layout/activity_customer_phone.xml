<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerPhone"
    android:background="@color/background"
    android:id="@+id/phone_number_layout">
    <?xml version="1.0" encoding="utf-8"?>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/logoLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35sp"
                        android:src="@drawable/logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/uraniabold"
                        android:text="@string/app_name_lowercase"
                        android:textColor="@color/textPrimary"
                        android:textSize="35sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/ibmplexsanssemibold"
                    android:text="Phone Number"
                    android:textColor="@color/textPrimary"
                    android:textSize="40sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ibmplexsansregular"
                    android:text="Add customer's whatsapp number."
                    android:textColor="@color/textSecondary"
                    android:textSize="23sp" />



                <EditText

                    android:id="@+id/number_cus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30sp"
                    android:background="@drawable/edittext_outline"
                    android:fontFamily="@font/ibmplexsansregular"
                    android:hint="Phone Number"
                    android:inputType="number"
                    android:maxLength="10"
                    android:padding="20sp"
                    android:singleLine="true"
                    android:textColor="@color/textPrimary"
                    android:textColorHint="@color/textSecondary"
                    android:textSize="20sp" />


                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/buttonbg"
                    android:drawableRight="@drawable/rightarrow"
                    android:fontFamily="@font/ibmplexsanssemibold"
                    android:gravity="left"
                    android:onClick="proceed"
                    android:padding="22sp"
                    android:text="Proceed"
                    android:textAllCaps="false"
                    android:textColor="@color/primaryOpposite"
                    android:textSize="20sp" />
            </LinearLayout>

        </ScrollView>
</RelativeLayout>